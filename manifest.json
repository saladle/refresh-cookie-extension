{
  "name": "ASM refresh cookie tool",
  "description": "ASM auto refresh cookie tool sau mỗi 30 phút",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://salad-todo-daily.web.app/*",
    "https://viblo.asia/*",
    "https://ads.google.com/*"
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "cookies",
    "scripting",
    "*://viblo.asia/*",
    "*://salad-todo-daily.web.app/*",
    "*://ads.google.com/*",
    "https://*/*",
    "identity",
    "identity.email"
  ],
  "manifest_version": 2
}
